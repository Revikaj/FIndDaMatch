<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/kitchen"
    tools:context=".GameGeneral.ui.MainActivity">

    <Button
        android:id="@+id/btnOptions"
        android:layout_width="144dp"
        android:layout_height="106dp"
        android:background="@drawable/closed"
        android:fontFamily="@font/amatica_sc"
        android:text="@string/options"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnPlay"
        app:layout_constraintTop_toTopOf="@+id/btnPlay" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="144dp"
        android:layout_height="106dp"
        android:background="@drawable/closed"
        android:fontFamily="@font/amatica_sc"
        android:text="@string/help"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnOptions"
        app:layout_constraintTop_toTopOf="@+id/btnPlay" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="144dp"
        android:layout_height="106dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/closed"
        android:fontFamily="@font/amatica_sc"
        android:text="@string/play"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="238dp"
        android:layout_height="343dp"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="132dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/chef" />

    <Button
        android:id="@+id/btnHighScores"
        android:layout_width="282dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="340dp"
        android:background="@drawable/rollingpin2"
        android:fontFamily="@font/amatica_sc"
        android:text="@string/high_scores"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
